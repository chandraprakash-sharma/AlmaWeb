<!doctype html>
<html lang="en">
<head>
    <%- include('partials/head'); %>
</head>
<body>
<header class="border-bottom">
    <%- include('partials/navbar')%>
</header>
<section class="container-fluid mb-5">
    <h1 class="text-center mt-5 text-primary">Register</h1>
    <div class="row pt-5">
        <div class="col-md-4"></div>
        <div class="col-md-4 col-sm-12">
            <% if(eMsg){
                eMsg.forEach(err=>{
            %>
            <%if(err['username']){ %>
                <div class="alert alert-danger" role="alert">
                    <%= err['username']%>
                </div>
            <% } %>
            <%if(err['email']){ %>
                <div class="alert alert-danger" role="alert">
                    <%= err['email']%>
                </div>
            <% } %>
            <%if(err['password']){ %>
                <div class="alert alert-danger" role="alert">
                    <%= err['password']%>
                </div>
            <% } %>
                <% }) } %>
            <div class="login-form">
                <form action="/register" method="post">
                    <div class="form-group ">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" name="username" id="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label><input type="password" class="form-control" name="password" id="password" placeholder="Password">
                    </div>
<!--                    <div class="form-group">-->
<!--                        <label for="repassword">Re-enter Password</label>-->
<!--                        <input type="password" class="form-control" name="repassword" id="repassword" placeholder="Re-password">-->
<!--                    </div>-->
                    <div class="btn-group">
                        <input type="submit" class="btn btn-primary" value="Register">
                        <input type="reset" class="btn btn-danger" value="Reset">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</section>
<%- include('partials/footer.ejs') %>
</body>
</html>